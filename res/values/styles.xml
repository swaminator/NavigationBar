<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="navigation_bar_item" parent="android:Widget.Holo.Button">
        <item name="android:background">@drawable/navigation_bar_item</item>
        <item name="android:gravity">center</item>
        <!--  20120-09-28: brldmila: NOTICE: too bad, state list not supported -->
        <!--  perhaps this change in future versions -->
        <!--  <item name="android:shadowColor">@color/navigation_bat_item_shadow</item> -->
        <item name="android:shadowColor">#55FF00FF</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textColor">@color/navigation_bar_item</item>
    </style>
</resources>